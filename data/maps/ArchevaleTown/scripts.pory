raw `

ArchevaleTown_OnTransition:
	setflag FLAG_VISITED_ARCHEVALE_TOWN
    end

ArchevaleTown_OnFrame:
    .2byte 0

ArchevaleTown_OnWarp:
    end
	
`

mapscripts ArchevaleTown_MapScripts {
    MAP_SCRIPT_ON_TRANSITION: ArchevaleTown_OnTransition
    MAP_SCRIPT_ON_FRAME_TABLE: ArchevaleTown_OnFrame
	MAP_SCRIPT_ON_WARP_INTO_MAP_TABLE [
        VAR_ARCHEVALE_HOUSE_STATE, 2: ArchevaleTown_SetIntro
	]
}

script ArchevaleTown_SetIntro {
	setflag(FLAG_HIDE_PLAYERS_HOUSE_CHERRY)
	setvar(VAR_ARCHEVALE_HOUSE_STATE, 3)
}

